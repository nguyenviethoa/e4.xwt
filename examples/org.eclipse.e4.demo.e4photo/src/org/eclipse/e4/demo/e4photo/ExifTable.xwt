<Composite xmlns="http://www.eclipse.org/xwt/presentation"
	xmlns:x="http://www.eclipse.org/xwt"
	xmlns:y="clr-namespace:org.eclipse.e4.demo.e4photo.xwt"
	x:class="org.eclipse.e4.demo.e4photo.ExifTable"
	xmlns:j="clr-namespace:java.lang">
	<Composite.layout>
		<GridLayout numColumns="1" />
	</Composite.layout>
	
	<TableViewer x:Name="exifTable" input="{Binding}" x:style="FULL_SELECTION">
		<TableViewer.columns>
			<TableViewerColumn width="80" text="Name" image="/icons/demo.gif" bindingPath="name"/>
			<TableViewerColumn width="80" text="Make" bindingPath="make"/>
			<TableViewerColumn width="80" text="Model" bindingPath="model"/>
			<TableViewerColumn width="80" text="Orientation" bindingPath="orientation"/>
			<TableViewerColumn width="80" text="Software" bindingPath="software"/>
			<TableViewerColumn width="80" text="Time stamp" bindingPath="timestamp"/>
			<TableViewerColumn width="80" text="GPS Latitude" bindingPath="gpsLatitude"/>
			<TableViewerColumn width="80" text="GPS Longitude" bindingPath="gpsLongitude"/>
			<TableViewerColumn width="80" text="Exposure" bindingPath="exposure"/>
			<TableViewerColumn width="40" text="ISO" bindingPath="iso"/>
			<TableViewerColumn width="80" text="Aperture" bindingPath="aperture"/>
			<TableViewerColumn width="80" text="Exposure Comp" bindingPath="exposureComp"/>
			<TableViewerColumn width="80" text="Flash" bindingPath="flash"/>
			<TableViewerColumn width="80" text="Width" bindingPath="width"/>
			<TableViewerColumn width="80" text="Height" bindingPath="height"/>
			<TableViewerColumn width="80" text="Focal Length" bindingPath="focalLength"/>
			<TableViewerColumn width="80" text="White Balance" bindingPath="whiteBalance"/>
			<TableViewerColumn width="80" text="Light Source" bindingPath="lightSource"/>
			<TableViewerColumn width="80" text="Exposure Program" bindingPath="exposureProgram"/>
		</TableViewer.columns>
		<TableViewer.contentProvider>
			<ObservableListContentProvider />
		</TableViewer.contentProvider>
		<TableViewer.labelProvider>
			<DefaultViewerLabelProvider/>
		</TableViewer.labelProvider>
		<TableViewer.table HeaderVisible="true"/>
		<TableViewer.control.layoutData>
			<GridData horizontalAlignment="FILL" verticalAlignment="FILL" grabExcessHorizontalSpace="true" grabExcessVerticalSpace="true"/>
		</TableViewer.control.layoutData>
		<TableViewer.control mouseDoubleClickEvent="editExif">
			<TableViewer.control.menu>
				<Menu x:style="POP_UP">
					<MenuItem text="Edit" x:style="PUSH" image="/icons/demo.gif" 
						enabled="{Binding ElementName=exifTable,path=singleSelection}"
						selectionEvent="editExif"/>
					<MenuItem text="Show" x:style="PUSH" image="/icons/demo.gif" 
						enabled="{Binding ElementName=exifTable,path=singleSelection}"
						selectionEvent="showLocation"/>
				</Menu>
			</TableViewer.control.menu>
		</TableViewer.control>
	</TableViewer>
	<Label x:Style="SEPARATOR|HORIZONTAL" >
		<Label.layoutData>
			<GridData horizontalAlignment="FILL" grabExcessHorizontalSpace="true"/>
		</Label.layoutData>
	</Label>
	
	
	<Composite dataContext="{Binding ElementName=exifTable,path=singleSelection}">
		<Composite.layout>
			<GridLayout numColumns="4"/>
		</Composite.layout>
		<Label text="{Binding path=make}">
			<Label.layoutData>
				<GridData horizontalAlignment="FILL" grabExcessHorizontalSpace="true" />
			</Label.layoutData>
		</Label>
		<Label text="{Binding path=Name}">
			<Label.layoutData>
				<GridData horizontalAlignment="FILL" grabExcessHorizontalSpace="true" />
			</Label.layoutData>
		</Label>
		<Label text="{Binding path=gpsLatitude}">
			<Label.layoutData>
				<GridData horizontalAlignment="FILL" grabExcessHorizontalSpace="true" />
			</Label.layoutData>
		</Label>
		<Label text="{Binding path=gpsLongitude}">
			<Label.layoutData>
				<GridData horizontalAlignment="FILL" grabExcessHorizontalSpace="true" />
			</Label.layoutData>
		</Label>
		<Composite.layoutData>
			<GridData horizontalAlignment="FILL" grabExcessHorizontalSpace="true" />
		</Composite.layoutData>
	</Composite>
</Composite>
