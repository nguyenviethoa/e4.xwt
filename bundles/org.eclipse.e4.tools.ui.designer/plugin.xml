<plugin>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="org.eclipse.e4.tools.ui.designer.viewContribution"
            targetID="org.eclipse.jdt.ui.PackageExplorer">
         <action
               class="org.eclipse.e4.tools.ui.designer.actions.OpenWorkbenchDesignerAction"
               id="org.eclipse.e4.tools.ui.designer.actions.OpenWorkbenchDesignerAction"
               label="%action.label"
               style="push">
         </action>
      </viewContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.e4.tools.ui.designer.E4Designer"
            contributorClass="org.eclipse.e4.xwt.tools.ui.designer.core.editor.DesignerActionBarContributor"
            default="true"
            extensions="xmi"
            filenames="Application"
            id="org.eclipse.e4.tools.ui.designer.E4Designer"
            name="%editor.name">
      </editor>
      <editor
            class="org.eclipse.e4.tools.ui.designer.E4Designer"
            contributorClass="org.eclipse.e4.xwt.tools.ui.designer.core.editor.DesignerActionBarContributor"
            default="true"
            extensions="e4xmi"
            filenames="Application"
            id="org.eclipse.e4.tools.ui.designer.E4Designer"
            name="%editor.name">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.eclipse.e4.tools.ui.designer.partContribution"
            objectClass="org.eclipse.gef.EditPart">
         <filter
               name="ModelType"
               value="org.eclipse.e4.ui.model.application.ui.basic.MPart">
         </filter>
         <action
               class="org.eclipse.e4.tools.ui.designer.actions.SetActivePartAction"
               id="org.eclipse.e4.tools.ui.designer.setActivePart"
               menubarPath="group.actions"
               label="%action.label.0">
         </action>
      </objectContribution>
      <objectContribution
            id="org.eclipse.e4.tools.ui.designer.perspectiveContribution"
            objectClass="org.eclipse.gef.EditPart">
         <filter
               name="ModelType"
               value="org.eclipse.e4.ui.model.application.ui.advanced.MPerspective">
         </filter>
         <action
               class="org.eclipse.e4.tools.ui.designer.actions.SetActivePerspectiveAction"
               id="org.eclipse.e4.tools.ui.designer.actions.SetActivePerspectiveAction"
               menubarPath="group.actions"
               label="%action.label.1">
         </action>
      </objectContribution>
      <objectContribution
            id="org.eclipse.e4.tools.ui.designer.partSashContainerContribution"
            objectClass="org.eclipse.e4.tools.ui.designer.editparts.WidgetEditPart">
         <filter
               name="ModelType"
               value="org.eclipse.e4.ui.model.application.ui.basic.MPartSashContainer">
         </filter>
         <action
               class="org.eclipse.e4.tools.ui.designer.actions.CompactPartSashContainerAction"
               id="org.eclipse.e4.tools.ui.designer.actions.CompactPartSashContainerAction"
               menubarPath="group.actions"
               label="%action.label.2">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.e4.xwt.tools.ui.palette.paletteContribution">
      <Contribution
            targetId="org.eclipse.e4.tools.ui.designer.E4Designer">
         <Resource
               provider="org.eclipse.e4.tools.ui.designer.palette.E4PaletteProvider">
         </Resource>
         <Tool
               class="org.eclipse.e4.xwt.tools.ui.palette.tools.PaletteCreationTool"
               type="creation">
         </Tool>
         <Tool
               class="org.eclipse.e4.tools.ui.designer.E4SelectionTool"
               type="selection">
         </Tool>
         <Initializer
               class="org.eclipse.e4.tools.ui.designer.palette.E4PartInitializer"
               id="org.eclipse.e4.tools.ui.designer.palette.E4PartInitializer"
               target="PART,INPUTPART">
         </Initializer>
         <Initializer
               class="org.eclipse.e4.tools.ui.designer.palette.E4PaletteInitializer"
               id="org.eclipse.e4.tools.ui.designer.palette.E4PaletteInitializer">
         </Initializer>
         <Resource
               provider="org.eclipse.e4.tools.ui.designer.palette.E4PartContribution">
         </Resource>
      </Contribution>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="org.eclipse.e4.tools.ui.designer.E4Designer">
         <propertySection
               class="org.eclipse.e4.tools.ui.designer.properties.AppearanceSection"
               id="AppearanceSection"
               tab="AppearanceTab">
            <input
                  type="org.eclipse.gef.EditPart">
            </input>
         </propertySection>
         <propertySection
               class="org.eclipse.e4.tools.ui.designer.properties.AvancedSection"
               id="AdvancedSection"
               tab="AdvancedTab">
            <input
                  type="org.eclipse.gef.EditPart">
            </input>
         </propertySection>
      </propertySections>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="org.eclipse.e4.tools.ui.designer.E4Designer">
         <propertyTab
               category="cat"
               id="AppearanceTab"
               label="General">
         </propertyTab>
         <propertyTab
               afterTab="AppearanceTab"
               category="cat"
               id="AdvancedTab"
               label="Advanced">
         </propertyTab>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="org.eclipse.e4.tools.ui.designer.E4Designer">
         <propertyCategory
               category="cat">
         </propertyCategory>
      </propertyContributor>
   </extension>
</plugin>
